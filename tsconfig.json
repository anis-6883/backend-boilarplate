{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "rootDir": "src",
    "baseUrl": "src"
  },
  "include": ["src/**/*"]
}
